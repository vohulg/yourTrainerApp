<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
     android:background="#ffffff"
    android:gravity="top" >
    
    <LinearLayout
        android:id="@+id/lnLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#92f2f8"
        android:orientation="vertical" >
        
         <TextView
             android:id="@+id/tvSecuessWord"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
              android:textColor="#000000"
             android:textSize="20sp"
             android:text="Add new complex"
             
              />
         
    </LinearLayout>
   
    <LinearLayout
        android:id="@+id/lnLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/lnLabel"
        android:background="#999999"
        android:orientation="horizontal" >
  </LinearLayout>
  
    <LinearLayout
        android:id="@+id/lnBrowse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnLine"
        android:orientation="vertical" >
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

			        <ImageButton
			            android:id="@+id/btnChooseFile"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			             android:background="#ffffff"
			             android:layout_gravity="center"
			            android:layout_weight="1"
			            android:onClick="chooseFile"
			            android:src="@drawable/ic_open_in_browser_black_36dp" />
			
			        <TextView
			            android:id="@+id/tvBrowse"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center"
			            android:text="Choose file" 
			             android:textColor="#000000"
			              android:layout_weight="1"
			             android:textSize="20sp"/>

			        <ImageButton
			            android:id="@+id/btnStartParse"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			             android:layout_weight="1"
			             android:layout_gravity="center"
			              android:background="#ffffff"
			              android:onClick="sendListToDb"
			            android:src="@drawable/ic_done_black_48dp" />
			        
	   </LinearLayout>
	   
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
			        
            <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
             android:textColor="#ee0e2e"
            android:text=".....no file choosed" /> 
			        
          </LinearLayout>
          
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
          </LinearLayout>
         
   </LinearLayout>
   
    
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

         <ImageButton
             android:id="@+id/btClearDb"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="#ffffff"
             android:src="@drawable/ic_delete_black_24dp" />
         
           <TextView
               android:id="@+id/tvDelDB"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:text="Delete databasse"
               android:textSize="20sp"
               android:textColor="#000000" />

    </LinearLayout>
     
         
         

</RelativeLayout>

